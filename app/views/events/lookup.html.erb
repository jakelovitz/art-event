<%= form_tag events_api_path do %>
  <label>Please select the location you're interested in:</label><br>

  <%= content_tag :div, class: "input-field col s12" do %>
   <%= select_tag :location, options_for_select(@locations), prompt: 'Select Location' %>
  <% end %>
  <br>

  <%= content_tag :label do %>
    <%= check_box_tag :filter_free %><%= content_tag :span, "Filter Free" %>
  <% end %>

  <br><br>
  <%= submit_tag "Submit", class: "waves-effect waves-light btn" %>

<% end %>