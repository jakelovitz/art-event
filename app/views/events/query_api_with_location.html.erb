<br><br>

<% @events.each do |event| %>

  <%= content_tag :div,  class: "row" do %>

    <%= content_tag :div, class: "col s12 m8 offset-m2" do %>

      <%= content_tag :div, class: "card" do %>

        <%= content_tag :div, class: "card-image" do %>
          <% if event.api_id.nil? && !!event.image.attachment %>
            <%= image_tag(event.image, style: "max-width: 400") %>
          <%else%>
            <img src="<%=event.img_url%>" style: "max-width: 400">
        <%end%>

          <%= content_tag :span, event.event_name, class: "card-title"  %>
        <% end %>

        <%= content_tag :div, class: "card-content" do %>
          <%= content_tag :p, event.address %>
          <br>
          <%= content_tag :p, event.event_description.nil? ? " " : truncate(event.event_description, length: 350, separator: ' ', omission: '...') %>
        <% end %>

        <%= content_tag :div, class: "card-action" do %>
          <%= link_to "More info", event_path(event.id) %>
        <% end %>

      <% end %>

    <% end %>

  <% end %>

<% end %>
<br>